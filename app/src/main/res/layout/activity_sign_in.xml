<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jit.checkmate.SignIn"
    android:background="@mipmap/back2">

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="5dp"
        android:layout_above="@+id/PasswordEdit"
        android:layout_alignEnd="@+id/PasswordEdit"
        android:layout_alignLeft="@+id/PasswordEdit"
        android:layout_alignRight="@+id/PasswordEdit"
        android:layout_alignStart="@+id/PasswordEdit"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="76dp"
        android:background="@drawable/rounded_edittext"/>


    <EditText
        android:id="@+id/PasswordEdit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="125dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/SignIn"
        android:layout_alignLeft="@+id/SignIn"
        android:layout_alignStart="@+id/SignIn"
        android:layout_alignRight="@+id/SignIn"
        android:layout_alignEnd="@+id/SignIn"
        android:background="@drawable/rounded_edittext"/>

    <Button
        android:id="@+id/SignIn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:onClick="signin"
        android:text="Sign In"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="200dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="       Not registered ?"
        android:textSize="15dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="263dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        />

    <Button
        android:id="@+id/registerbttn"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView3"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="14dp"
        android:textColor="#ffffff"
        android:onClick="register"
        android:text="Register Here"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="306dp"
        android:layout_alignLeft="@+id/SignIn"
        android:layout_alignStart="@+id/SignIn"
        android:layout_alignRight="@+id/SignIn"
        android:layout_alignEnd="@+id/SignIn"
        />

</RelativeLayout>
