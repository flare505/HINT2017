<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jit.checkmate.FindMates"
    android:background="@mipmap/back2">

    <ListView
        android:id="@+id/mate_list"
        android:layout_width="match_parent"
        android:layout_height="450dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Interested"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center_horizontal"
            android:onClick="Register"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:text="Done"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:onClick="IamDone"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


</LinearLayout>
